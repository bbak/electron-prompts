{
    "defaults": {
        "windowTitle": "electron-prompts",
        "cancelButton": {
            "classes": [
                "btn",
                "btn-secondary"
            ]
        }
    },
    "changeValue": {
        "elements": [
            {
                "type": "header",
                "value": "Change test value"
            },
            {
                "type": "paragraph",
                "value": "Add a space to the end of the default value to test changed value:"
            },
            {
                "name": "testValue",
                "type": "input",
                "placeholder": "Test input",
                "classes": [
                    "form-control"
                ],
                "value": "Add a space after me please:"
            }
        ],
        "buttons": [
            {
                "name": "submit",
                "classes": [
                    "btn",
                    "btn-primary"
                ],
                "value": "Save Changes"
            }
        ]
    },
    "changeValueWithType": {
        "elements": [
            {
                "type": "header",
                "value": "Change test value"
            },
            {
                "type": "paragraph",
                "value": "Change the value below:"
            },
            {
                "name": "testValue",
                "type": "input",
                "attributes": {
                    "type": "date",
                    "min": "2002-01-01",
                    "max": "2102-01-01"
                },
                "classes": [
                    "form-control"
                ],
                "value": "2007-01-01"
            },
            {
                "type": "paragraph",
                "value": "Additional test inputs:"
            },
            {
                "type": "input",
                "name": "pin",
                "placeholder": "Enter a new PIN to continue",
                "attributes": {
                    "type": "password"
                },
                "classes": [
                    "form-control"
                ]
            },
            {
                "type": "input",
                "name": "colorTest",
                "placeholder": "Try selecting a color",
                "attributes": {
                    "type": "color"
                },
                "classes": [
                    "form-control"
                ]
            }
        ],
        "buttons": [
            {
                "name": "submit",
                "classes": [
                    "btn",
                    "btn-primary"
                ],
                "value": "Save Changes"
            }
        ]
    },
    "changeSelect": {
        "elements": [
            {
                "type": "header",
                "value": "Select menu test"
            },
            {
                "type": "paragraph",
                "value": "Select the other option in the menu and submit the form"
            },
            {
                "name": "testSelect",
                "type": "select",
                "classes": [
                    "form-select"
                ],
                "options": [
                    {
                        "value": "test1",
                        "text": "Test option 1"
                    },
                    {
                        "value": "test2",
                        "text": "Test option 2",
                        "selected": true
                    }
                ]
            }
        ],
        "buttons": [
            {
                "name": "submit",
                "classes": [
                    "btn",
                    "btn-primary"
                ],
                "value": "Save Changes"
            }
        ]
    },
    "dontChangeSelect": {
        "elements": [
            {
                "type": "header",
                "value": "Select menu test"
            },
            {
                "type": "paragraph",
                "value": "Leave this select menu UNCHANGED then submit:"
            },
            {
                "name": "testSelect",
                "type": "select",
                "classes": [
                    "form-select"
                ],
                "options": [
                    {
                        "value": "test1",
